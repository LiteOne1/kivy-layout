#:kivy 1.10.0

<Film>:
    BoxLayout:
        orientation: 'vertical' 
        padding: "10dp"
        BoxLayout:
            size_hint_y: 200
            BoxLayout:
                size_hint: root.size_hint
                orientation: 'vertical'
                Button:
                    text: 'B 1'
                    size_hint_x: 1
                    size_hint_y: root.size_hint_y/1.9
                Button:
                    text: 'B 2'
                    size_hint_x: 1
                    size_hint_y: root.size_hint_y/1.9
                    on_press: root.get_syn()
            Button:
                text: 'B 3'
                size_hint_x: 4
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 600
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.2
                Button:
                    
                    size_hint_x: 1
                    text_size: self.size
                    font_size: dp(20)         
                    text: 'B 4'
                Button:
                    id: cast
                    size_hint_x: 1
                    text_size: self.size
                    size_hint_y: 1
                    text: 'B 5'
            BoxLayout:
                size_hint_x: 0.8
                orientation:'vertical'
                Button:
                    id: synopsis
                    text_size: self.size
                    color: 1,1,1,1
                    text: "B 6"
                    font_size: sp(12)
                    
            


      
        


    
            
        

            

            
     

            